extends layout

block content
  .container.mt-5
    .card
      .card-header.bg-primary.text-white
        h1.mb-0 Entidades Associadas às Ruas
      .card-body
        table.table.table-striped.table-hover
          thead
            tr
              th Número da Rua
              th Nome da Rua
              th Número de Casas
              th Entidade
          tbody
            each rua in ruas
              tr
                td= rua.numero
                td
                  a(href='http://localhost:1894/'+rua._id)= rua.nome
                td= rua.casas.length
                td= rua.entidade
      .card-footer.text-muted
        h5.mb-0 Generated by Group 38 in #{date}