extends layout

block content
  .w3-card-4 
    header.w3-container.w3-teal 
      h1 
        span Lista de Ruas 
        span 
          a.w3-button.w3-green.w3-right(href="/criar") + Nova Rua
    
    .w3-container 
      table.w3-table-all 
        tr 
          th Número da Rua
          th Nome da Rua  
          th Número de Casas 
        each rua in Ruas
          tr 
            td= rua.numero
            td
              a(href='http://localhost:1894/'+rua.numero)= rua.nome
            td= rua.casas.length
            td
              a.w3-button.w3-blue(href="/edit/" + rua._id ) Editar 
              a.w3-button.w3-red(href="/delete/" + rua._id) Apagar
    footer.w3-container.w3-teal 
      h5 Generated by Group 38 in #{Data}