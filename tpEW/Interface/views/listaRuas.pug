extends layout

block content
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    a.navbar-brand(href='#') Mapa das Ruas de Braga
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    .collapse.navbar-collapse#navbarNav
      ul.navbar-nav.ml-auto
        li.nav-item
          a.nav-link(href='/logout') Logout

  .container.mt-5
    .card
      .card-header.bg-primary.text-white
        h1.mb-0 Lista de Ruas
        a.btn.btn-success.btn-sm.float-right(href="/criar") + Nova Rua
      .card-body
        table.table.table-hover
          thead
            tr
              th Número da Rua
              th Nome da Rua  
              th Número de Casas 
              if(level === "Admin")
                th Ações
          tbody
            each rua in Ruas
              tr 
                td= rua.numero
                td
                  a(href='http://localhost:1894/'+rua._id)= rua.nome
                td= rua.casas.length
                if(level === "Admin")
                  td
                    a.btn.btn-primary.btn-sm(href="/editar/" + rua._id) Editar 
                    a.btn.btn-danger.btn-sm(href="/delete/" + rua._id) Apagar
      .card-footer.text-muted
        h5.mb-0 Generated by Group 38 in #{Data}

