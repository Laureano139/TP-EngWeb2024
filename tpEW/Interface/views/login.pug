extends layout

block content
    .w3-card-4 
        header.w3-container.w3-blue
            h1 Login

        .w3-container
            form.w3-container(method="POST", action="/login")
                fieldset 
                    legend User Credentials
                    label(for="username") Username
                    input.w3-input.w3-round(type="text", id="username", name="username")
                    label(for="password") Password
                    input.w3-input.w3-round(type="password", id="password", name="password")

                input.w3-btn.w3-blue(type="submit", value="Login")
    footer.w3-container.w3-teal 
      h5 Generated by Group 38 in #{Data}