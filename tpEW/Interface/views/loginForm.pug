extends layout

block content

  main.form-signin.w-100.m-auto.text-center
    form(style="max-width: 330px; padding: 15px; margin: auto;" action="/login" method="POST")
      h1.h3.mb-3.fw-normal Efetuar Log In
      .form-floating.mb-3
        input.form-control#username(type="text", placeholder="Username", name="username" required autofocus)
        label(for="username") Username
      .form-floating.mb-3
        input.form-control#password(type="password", placeholder="Password", name="password" required)
        label(for="password") Password
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Login