extends layout

block content
  .w3-card-4
    header.w3-container.w3-grey
      h1= Rua.nome

    .w3-container.w3-center
      h3
        b Vistas atuais
    .w3-row-padding.w3-margin-top
      each figura in Rua.figuras
        if figura.imagem.path.startsWith('../atual')
          .w3-third
            .w3-card
              img(src=`${figura.imagem.path.slice(2)}`, style="width:100%")

    .w3-container.w3-center
      h3
        b Vistas antigas
      .w3-row-padding.w3-margin-top
        each figura in Rua.figuras
          if figura.imagem.path.startsWith('../imagem')
            .w3-third
              .w3-card
                img(src=`${figura.imagem.path.slice(2)}`, style="width:100%")
                .w3-container
                  h5= figura.legenda

    br
    .example
      .w3-container.w3-center
        h3
          b Descrição
      p!= Rua.paragrafo.texto

    .w3-container.w3-center
      h3
        b Casas
      table.w3-table-all
        thead
          tr.w3-grey
            th Casa
            th Dono
            th Custo
            th Sobre
        tbody
          each casa in Rua.casas
            tr
              td= casa.numero
              td= casa.enfiteutas
              td= casa.foro
              td
                p!= casa.desc.texto

    br
    footer.w3-container.w3-grey
        h5 Generated by Group 38 in #{Data}
